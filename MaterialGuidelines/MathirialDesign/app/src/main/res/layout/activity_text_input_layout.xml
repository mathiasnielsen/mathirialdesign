<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Features.Controls.TextInputLayoutActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello"
        app:fontPath="lobster_regular.ttf"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/firstInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        style="@style/TextLayoutInputFormBase">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="This is a hint"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/firstInputLayout"
        android:layout_marginTop="40dp"
        style="@style/TextLayoutInputFormBase">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="This is a hint"/>
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>