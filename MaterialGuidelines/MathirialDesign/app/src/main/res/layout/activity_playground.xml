<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<android.support.constraint.ConstraintLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/red"
    tools:context=".Features.PlaygroundActivity">

    <TextView
        android:id="@+id/ArchetypeContentPrimaryButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="text 1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:background="#FF00FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="80dp"
        android:visibility="gone"/>

    <Space
        android:id="@+id/SubstituteTopSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:layout_goneMarginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/ArchetypeContentPrimaryButton"/>

    <TextView
        android:id="@+id/ArchetypeContentSecondaryButton"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:background="#00FFFF"
        android:text="text 2"
        android:layout_marginTop="80dp"
        app:layout_goneMarginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/ArchetypeContentPrimaryButton"/>

</android.support.constraint.ConstraintLayout>
</RelativeLayout>