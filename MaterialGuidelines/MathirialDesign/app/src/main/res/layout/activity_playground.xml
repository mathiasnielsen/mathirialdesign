<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/BeamControlBeamControl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/BeamControlRoleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="primary"
            app:layout_constraintTop_toBottomOf="@id/BeamControlBeamControl"/>

        <FrameLayout
            android:id="@+id/BeamControlPlacementTextContainer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/yellow"
            app:layout_constraintTop_toBottomOf="@id/BeamControlRoleTextView"/>

        <SeekBar
            android:id="@+id/BeamControlInformationalSeekBarDistance"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/BeamControlPlacementTextContainer"/>

        <SeekBar
            android:id="@+id/BeamControlInformationalSeekBarLevel"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/BeamControlInformationalSeekBarDistance"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>