<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <View
        android:id="@+id/fakeTop1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFF00"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"/>
    <View
        android:id="@+id/topImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF00FF"
        android:layout_margin="16dp"
        android:src="@drawable/ic_save_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/fakeTop1"
        app:layout_constraintLeft_toLeftOf="@id/fakeTop1"
        app:layout_constraintRight_toRightOf="@id/fakeTop1"/>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/myNestedScrollView"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/SupportLinearLayoutContainer"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <View
                android:id="@+id/fakeTop2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1"/>
            <TextView
                android:id="@+id/SoftwareVersionTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="4000dp"
                android:background="@color/blue"
                android:text="hello"
                app:layout_constraintTop_toBottomOf="@id/fakeTop2"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>