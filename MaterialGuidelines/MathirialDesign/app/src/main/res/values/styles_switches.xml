<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ColoredSwitchTheme" parent="AppTheme">

        <!-- Highlight color when pressed thumb -->
        <item name="colorControlHighlight">@color/green</item>

        <!-- OFF color of the thumb -->
        <!-- Also 30% transparency of the disabled thumb (both ON and OFF) -->
        <!-- <item name="colorSwitchThumbNormal">@color/thumb_switch_check_color</item> -->

        <!-- Default ON color of the thumb -->
        <!-- TRACK COLOR is 30% color when ON -->
        <item name="colorControlActivated">@color/green</item>

        <!-- Another way is THUMB Tint (Only the tint), which supports selectors perfectly -->
        <item name="thumbTint">@color/thumb_switch_check_color</item>

        <!-- TRACK color when OFF -->
        <!-- Also 30% transparency of the disabled track color -->
        <item name="android:colorForeground">@color/purple</item>

    </style>


