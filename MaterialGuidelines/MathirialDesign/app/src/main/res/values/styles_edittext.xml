<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextLayoutInputFormBase">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="errorEnabled">true</item>

        <!-- HintTextAppearence shown when text is in focus -->
        <item name="hintTextAppearance">@style/HintTextAppearance</item>

        <!-- We add minus margin in order to make the layout align with other controls -->
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="HintTextAppearance"
        parent="TextAppearance.AppCompat">
        <item name="fontPath">lobster_regular.ttf</item>
        <item name="android:textSize">100sp</item>
    </style>
</resources>
